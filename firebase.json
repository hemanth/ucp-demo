{
    "hosting": {
        "site": "ucp-demo",
        "public": "src/public",
        "ignore": [
            "firebase.json",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "/.well-known/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": [
        {
            "source": ".",
            "codebase": "default",
            "runtime": "nodejs20"
        }
    ]
}